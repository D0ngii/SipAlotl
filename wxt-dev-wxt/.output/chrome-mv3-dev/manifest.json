{
  "manifest_version": 3,
  "name": "SipAlotl",
  "description": "",
  "version": "0.1.0",
  "icons": {
    "16": "icon/icon-16.png",
    "24": "icon/icon-24.png",
    "32": "icon/icon-32.png",
    "48": "icon/icon-48.png",
    "96": "icon/icon-96.png",
    "128": "icon/icon-128.png"
  },
  "options_ui": {
    "page": "popup/index.html",
    "open_in_tab": false
  },
  "action": {
    "default_title": "Sipalotl",
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:3000; object-src 'self';",
    "sandbox": "script-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:3000; sandbox allow-scripts allow-forms allow-popups allow-modals; child-src 'self';"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "sidePanel",
    "declarativeNetRequest",
    "debugger",
    "tabGroups"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://*/*",
    "http://*/*",
    "*://*.google.com/*",
    "http://localhost/*"
  ],
  "commands": {
    "wxt:reload-extension": {
      "description": "Reload the extension during development",
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}